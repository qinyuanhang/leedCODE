这个没什么难的，主要就是要注意字母和数字都可以


public class Solution {
    public boolean isPalindrome(String s) {
        if(s=="") return true;
        
        int p1=0,p2=s.length()-1;
        s=s.toLowerCase();
        
       while(p2>=p1){
           
            if(isLetter(s.charAt(p1)) && isLetter(s.charAt(p2))  ){
                if(s.charAt(p1)==s.charAt(p2)) {
                    p1++;
                    p2--;
                }else{
                    return false;
                }
                
            }else if(!isLetter(s.charAt(p1)) && isLetter(s.charAt(p2)) ){
                p1++;
            }else if(isLetter(s.charAt(p1)) && !isLetter(s.charAt(p2)) ){
                p2--;
            }else if(!isLetter(s.charAt(p1)) && !isLetter(s.charAt(p2))){
                p1++;
                p2--;
            }
            
        }
        return true;
        
    }
    
    public boolean isLetter(char a){
        if((a>='a' && a<='z' )|| (a>='0' && a<='9')){
            return true;
        }else{
            return false;
        }
    }
}

这事machine zone的面试题，当时我不会做

/**
 * Definition for an interval.
 * public class Interval {
 *     int start;
 *     int end;
 *     Interval() { start = 0; end = 0; }
 *     Interval(int s, int e) { start = s; end = e; }
 * }
 */
public class Solution {
    public List<Interval> insert(List<Interval> intervals, Interval newInterval) {
        
        List<Interval> res = new ArrayList<Interval>();
        int position = 0;
        for(Interval i : intervals){
            if(i.end < newInterval.start){
                //intervals.add(newInterval);//不能这样，因为你这样操作了intervals，但是这个while loop要用到interval，
                                              //这样就会出现concorent exception
                                              res.add(i);
                position++;
            }else if(i.start > newInterval.end){
                // intervals.add(newInterval);
                res.add(i);
            }else{//这里就是merge的过程
                newInterval.start = Math.min(i.start,newInterval.start);
                newInterval.end = Math.max(i.end,newInterval.end);
            }
        }
        res.add(position,newInterval);
        return res;
    }
}

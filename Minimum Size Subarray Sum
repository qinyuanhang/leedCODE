public class Solution {
    public int minSubArrayLen(int s, int[] nums) {
        
        if(nums.length > 0){
            
            int start = 0, tail = 0, sum = 0, min = Integer.MAX_VALUE;
            
            while(tail < nums.length){
                    sum = sum + nums[tail];//只要小于s，就直接往后面加
                    
                    while(sum >= s){//这里很巧妙，只要大于就更新一次，因为每更新一次就会比原来小
                        min = Math.min(min, tail - start + 1);
                        sum = sum - nums[start];
                        start++;
                    }
                    
                    tail++;
                    
            }
            return min == Integer.MAX_VALUE ? 0: min;//要是一直小于s，min就会不变。这里要加一个判断
        }
        return 0;
    }
}

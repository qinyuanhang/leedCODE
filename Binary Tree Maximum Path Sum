//学会建造自己的类
public class Solution {
    private class Result{
        int singlePath, maxPath;
        Result(int singlePath, int maxPath){
            this.singlePath = singlePath;
            this.maxPath = maxPath;
        }
    }
    
    
    private Result helper(TreeNode root){
        if(root == null){
            return new Result(0, Integer.MIN_VALUE);
        }
        //分开
        Result left = helper(root.left);
        Result right = helper(root.right);
        //合并
        int singlePath = Math.max(left.singlePath, right.singlePath) + root.val;
        singlePath = Math.max(0,singlePath);这里要和0比较一下，因为可能会是负数，所以当这个值是负数的时候，就不要这个值
        int maxPath = Math.max(left.maxPath,right.maxPath);
        maxPath = Math.max(maxPath, left.singlePath + right.singlePath + root.val);
        
        return new Result(singlePath, maxPath);
    }
    public int maxPathSum(TreeNode root) {
        Result result = helper(root);//返回一个自己的类
        return result.maxPath;
    }
}
